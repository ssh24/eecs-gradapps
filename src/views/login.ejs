<% include partials/header %>
    <% include partials/navbar %>
        <!--Main Message-->
        <div class="jumbotron">
            <form action="/login" method="post">
                <div class="container">

                    <div class="col-sm-6 col-sm-offset-3">
                    
                        <h1 id="login-header"><span class="glyphicon glyphicon-log-in"></span> Login</h1>
                    
                        <!-- show any messages that come back with authentication -->
                        <% if (message.length > 0) { %>
                            <div id="error-message" class="alert alert-danger"><%= message %></div>
                        <% } %>
                    
                        <!-- LOGIN FORM -->
                        <form action="/login" method="post">
                            <div class="form-group">
                                <label>Username</label>
                                <input id="username" type="text" class="form-control" name="username">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input id="password" type="password" class="form-control" name="password">
                            </div>
                    
                            <button id='login-btn' type="submit" class="btn btn-warning btn-lg">Login &raquo;</button>
                        </form>
                    
                        <hr>

                        <h5>Need an account? <a id="go-register" href="/register">Register</a></h5>
                        <h5>Or return <a id="go-home" href="/"><span class="glyphicon glyphicon-home"></span> Home</a></h5>
                    </div>
                    
                    </div>
        </div>
<% include partials/footer %>
