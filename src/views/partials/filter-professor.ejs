<!-- Modal Filter Section-->
<div class="modal fade" id="filterModal">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id="close-btn" type="button" class="close" data-dismiss="modal">â€”</button>
        <h2>Filter <span class="glyphicon glyphicon-pencil"></span></h2>
      </div>
      <form id="filterForm" action="/roles/professor/filter" method="post">
        <div class="modal-body">
          <div id="div_col" class="form-group row">
            <h4>Choose Your Columns</h4>
            <select id="preset" name="preset" style="display: inline-block;">
                            <option>Loaded from database...</option>
                            <option>Preset 2</option>
                            <option>Preset 3</option>
                            <option>Preset 4</option>
            </select>
            <hr>
            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <button id="btn_col_name" name="btn_col_name" type="button" class="btn btn-default">Name</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_gender" name="btn_col_gender" type="button" class="btn btn-default">Gender</button>
                  </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_foi" name="btn_col_foi" type="button" class="btn btn-default">Field of Interest</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_prof" name="btn_col_prof" type="button" class="btn btn-default">Preferred Professor</button>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <button id="btn_col_ranking" name="btn_col_ranking" type="button" class="btn btn-default">Committee Ranking</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_gpa" name="btn_col_gpa" type="button" class="btn btn-default">GPA</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_degree" name="btn_col_degree" type="button" class="btn btn-default">Degree Applied For</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_visa" name="btn_col_visa" type="button" class="btn btn-default">Visa Status</button>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <button id="btn_col_contacted_status" name="btn_col_contacted_status" type="button" class="btn btn-default">Contacted By</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_requested_status" name="btn_col_requested_status" type="button" class="btn btn-default">Requested By</button>
                  </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_interest" name="btn_col_interest" type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="This field is private and can only be seen by you.">My Interest Status</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_actions" name="btn_col_actions" type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom">Actions</button>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <h4>Choose Your Filters</h4>
            <hr>
            <div class="row">
              <div class="col-xs-4">
                <div class="form-group">
                  <label for="">Name</label>
                  <select id="btn_filter_name" name="btn_filter_name" class="form-control selectpicker" data-live-search="true">
                        <option selected="selected">Any</option>
                        <% for(var i = 0; i < applicants.length; i++){ %>
                            <option><%= applicants[i]%></option>
                        <%}%>
                    </select>
                </div>
              </div>
              <div class="col-xs-4">
                  <div class="form-group">
                    <label for="">Gender</label>
                    <select id="btn_filter_gender" name="btn_filter_gender" class="form-control selectpicker" data-live-search="true">
                          <option selected="selected">Any</option>
                          <option>M</option>
                          <option>F</option>
                      </select>
                  </div>
                </div>
              <div class="col-xs-4">
                <div class="form-group">
                  <label for="">Fields of Interest</label>
                  <select id="btn_filter_foi" name="btn_filter_foi" class="form-control selectpicker" data-live-search="true">
                      <option selected="selected">Any</option>
                      <% for(var i = 0; i < foi.length; i++){ %>
                          <option><%= foi[i]%></option>
                      <%}%>
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                      <label for="">Preferred Professor</label>
                      <select id="btn_filter_prof" name="btn_filter_prof" class="form-control selectpicker" data-live-search="true">
                          <option selected="selected">Any</option>
                          <% for(var i = 0; i < profs.length; i++){ %>
                              <option><%= profs[i]%></option>
                          <%}%>
                      </select>
                    </div>
                  </div>
              <div class="col-xs-4">
                <div class="form-group">
                  <label for="">Committee Ranking</label>
                  <select id="btn_filter_ranking" name="btn_filter_ranking" class="form-control selectpicker" data-live-search="true">
                      <option selected="selected">Any</option>
                      <% for(var i = 0; i < gpa.length; i++){ %>
                        <% if (gpa[i] === 'A+' || gpa[i] === 'A' || gpa[i] === 'B+' || gpa[i] === 'B' || gpa[i] === 'C') { %>
                          <option>>= <%= gpa[i]%></option>
                          <option>&gt; <%= gpa[i]%></option>
                          <option>= <%= gpa[i]%></option>
                        <% } else { %>
                          <% continue; %>
                        <%}%>
                      <%}%>  
                  </select>
                </div>
              </div>
              <div class="col-xs-4">
                <label for="">GPA</label>
                <select id="btn_filter_gpa" name="btn_filter_gpa" class="form-control selectpicker" data-live-search="true">
                    <option selected="selected">Any</option>
                    <% for(var i = 0; i < gpa.length; i++){ %>
                      <option>>= <%= gpa[i]%></option>
                      <option>&gt; <%= gpa[i]%></option>
                      <option>= <%= gpa[i]%></option>
                    <%}%>         
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-4">
                    <div class="form-group">
                      <label for="">Degree Applied For</label>
                      <select id="btn_filter_degree" name="btn_filter_degree" class="form-control selectpicker" data-live-search="true">
                          <option selected="selected">Any</option>
                          <option>PhD</option>
                          <option>MSc</option>
                          <option>MASc</option>
                      </select>
                    </div>
              </div>
              <div class="col-xs-4">
                      <div class="form-group">
                        <label for="">Visa Status</label>
                        <select id="btn_filter_visa" name="btn_filter_visa"class="form-control selectpicker" data-live-search="true">
                            <option selected="selected">Any</option>
                            <option>Domestic</option>
                            <option>Visa</option>
                        </select>
                      </div>
              </div>
              <div class="col-xs-4">
                <div class="form-group">
                  <label for="">Contacted By</label>
                  <select id="btn_filter_contacted_by" name="btn_filter_contacted_by" class="form-control selectpicker" data-live-search="true">
                    <option selected="selected">Any</option>
                    <% for(var i = 0; i < profs.length; i++){ %>
                      <option><%= profs[i]%></option>
                    <%}%>
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                      <label for="">Requested By</label>
                      <select id="btn_filter_requested_by" name="btn_filter_requested_by" class="form-control selectpicker" data-live-search="true">
                        <option selected="selected">Any</option>
                        <% for(var i = 0; i < profs.length; i++){ %>
                          <option><%= profs[i]%></option>
                        <%}%>
                      </select>
                    </div>
                  </div>
                <div class="col-xs-4">
                  <div class="form-group">
                    <label for="">My Interest Status</label>
                    <select id="btn_filter_interest" name="btn_filter_interest" class="form-control selectpicker" data-live-search="true">
                          <option selected="selected">Any</option>
                          <option>-</option>
                          <option>Interested</option>
                          <option>Not Interested</option>      
                    </select>
                  </div>
                </div>
            </div>
          </div>
          <div class="form-group row">
            <h4>Selected Filter</h4>
            <hr>
            <p>Visa Status = VISA <span style="color:red">AND</span> GPA >= C <span style="color:red">AND</span> Committee Ranking > C</p>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group row">
            <button class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
            <button type="submit" class="btn btn-success btn-default pull-left"><span class="glyphicon glyphicon-check"></span> Submit</button>
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Preset Name">
              <span class="input-group-btn">
                    <button class="btn btn-primary form-control" type="button">Save Preset</button>
              </span>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
