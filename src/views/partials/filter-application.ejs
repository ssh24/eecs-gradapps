<!-- Modal Filter Section-->
<div class="modal" id="filterModal">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id="close-btn" type="button" class="close" data-dismiss="modal">â€”</button>
        <h2>Filter <span class="glyphicon glyphicon-pencil"></span></h2>
      </div>
      <form id="filterForm" method="post">
        <div class="modal-body">
          <div id="div_preset" class="form-group row">
            <h4>Load a Preset</h4>
            <hr>
            <div class="row">
                <select id="preset" name="preset" style="display: inline-block;" class="selectpicker" data-live-search="true" title="Nothing Selected">
                    <% if (presets) {%>
                      <% for(var key in presets) { %>
                        <option><%= key %></option>
                      <% } %>
                    <% } %>
                </select>
            </div>
          </div>
          <div id="div_col" class="form-group row">
            <h4>Choose Your Columns</h4>
            <hr>
            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button id="btn_col_date" name="btn_col_date" type="button" class="btn btn-default">Date Uploaded</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_sid" name="btn_col_sid" type="button" class="btn btn-default">Student Number</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_name" name="btn_col_name" type="button" class="btn btn-default">Applicant Name</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_gpa" name="btn_col_gpa" type="button" class="btn btn-default">GPA</button>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <button id="btn_col_degree" name="btn_col_degree" type="button" class="btn btn-default">Degree Applied For</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_visa" name="btn_col_visa" type="button" class="btn btn-default">Visa Status</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_program_decision" name="btn_col_program_decision" type="button" class="btn btn-default">Program Decision</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_actions" name="btn_col_actions" type="button" class="btn btn-default">Actions</button>
                </div>
              </div>
            </div>
          </div>
          <div id="div_filt" class="form-group row">
            <h4>Choose Your Filters</h4>
            <hr>
            <div class="row">
              <div class="col-xs-3">
                <div class="form-group">
                  <label for="btn_filter_name">Applicant Name</label>
                  <select id="btn_filter_name" name="btn_filter_name" class="form-control selectpicker" data-live-search="true">
                        <option selected="selected">Any</option>
                        <% for(var i = 0; i < applicants.length; i++){ %>
                            <option><%= applicants[i]%></option>
                        <%}%>
                    </select>
                </div>
              </div>
              <div class="col-xs-2">
                <div class ="form-group">
                    <label for="btn_filter_gpa">GPA</label>
                    <select id="btn_filter_gpa" name="btn_filter_gpa" class="form-control selectpicker" data-live-search="true">
                        <option selected="selected">Any</option>
                        <% for(var i = 0; i < gpa.length; i++){ %>
                          <% if (gpa[i] === 'A' || gpa[i] === 'B+' || gpa[i] === 'B') { %>
                            <option>&gt; <%= gpa[i]%></option>
                            <option>= <%= gpa[i]%></option>
                          <%}%>
                        <%}%>
                    </select>
                </div>
                </div>
              <div class="col-xs-2">
                  <div class="form-group">
                    <label for="btn_filter_degree">Degree</label>
                    <select id="btn_filter_degree" name="btn_filter_degree" class="form-control selectpicker" data-live-search="true">
                        <option selected="selected">Any</option>
                        <option>PhD</option>
                        <option>MSc</option>
                        <option>MASc</option>
                    </select>
                  </div>
              </div>
              <div class="col-xs-2">
                  <div class="form-group">
                      <label for="btn_filter_visa">Visa Status</label>
                      <select id="btn_filter_visa" name="btn_filter_visa" class="form-control selectpicker" data-live-search="true">
                                <option selected="selected">Any</option>
                                <option>Domestic</option>
                                <option>Visa</option>
                            </select>
                    </div>
              </div>
              <div class="col-xs-3">
                  <div class="form-group">
                      <label for="btn_filter_program_decision">Program Decision</label>
                      <select id="btn_filter_program_decision" name="btn_filter_program_decision" class="form-control selectpicker" data-live-search="true">
                            <option selected="selected">Any</option>
                            <option>Accepted</option>
                            <option>Declined</option>
                            <option>Under Review</option>
                      </select>
                    </div>
            </div>
            </div>

          </div>
          <div class="form-group row">
            <h4>Selected Filter</h4>
            <hr>
            <p id="selectedFilter"></p>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group row">
            <button id="filter-close" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
            <button id="filter_submit" type="submit" class="btn btn-success btn-default pull-left"><span class="glyphicon glyphicon-check"></span> Submit</button>
            <div class="input-group">
              <input type="text" id="preset_name" name="preset_name" class="form-control" placeholder="Preset Name">
              <span class="input-group-btn">
                  <button id="save_preset" name="save_preset" class="btn btn-primary form-control" type="submit">Save Preset</button>
            </span>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
