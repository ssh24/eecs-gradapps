<!-- Modal Filter Section-->
<div class="modal" id="filterModal">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id="close-btn" type="button" class="close" data-dismiss="modal">â€”</button>
        <h2>Filter <span class="glyphicon glyphicon-pencil"></span></h2>
      </div>
      <form id="filterForm" method="post">
        <div class="modal-body">
          <div id="div_preset" class="row">
            <h4>Load a Preset</h4>
            <select id="preset" name="preset" style="display: inline-block;" class="selectpicker" data-live-search="true" title="Nothing Selected">
              <% if (presets) {%>
                <% for(var key in presets) { %>
                  <option><%= key %></option>
                <% } %>
              <% } %>
            </select>
            <hr>
          </div>
          <div id="div_col" class="form-group row">
            <h4>Choose Your Columns</h4>

            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <button id="btn_col_visa" name="btn_col_visa" type="button" class="btn btn-default">Visa Status</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_foi" name="btn_col_foi" type="button" class="btn btn-default">Field(s) of Interest</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_prof" name="btn_col_prof" type="button" class="btn btn-default">Preferred Professor(s)</button>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <button id="btn_col_rev_assigned" name="btn_col_rev_assigned" type="button" class="btn btn-default">Review Assigned</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_rev_pending" name="btn_col_rev_pending" type="button" class="btn btn-default">Review Pending</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_actions" name="btn_col_actions" type="button" class="btn btn-default">Actions</button>
              </div>
              </div>
            </div>

          </div>

          <div id="div_filt" class="form-group row">
            <h4>Choose Your Filters</h4>
            <hr>
            <div class="row">
              <div class="col-xs-4">
                <div class="form-group">
                  <label for="btn_filter_visa">Visa Status</label>
                  <select id="btn_filter_visa" name="btn_filter_visa" class="form-control selectpicker" data-live-search="true">
                            <option selected="selected">Any</option>
                            <option>Domestic</option>
                            <option>Visa</option>
                        </select>
                </div>
              </div>

              <div class="col-xs-4">
                <div class="form-group">
                  <label for="btn_filter_foi">Field(s) of Interest</label>
                  <select id="btn_filter_foi" name="btn_filter_foi" class="form-control selectpicker" data-live-search="true">
                      <option selected="selected">Any</option>
                      <% for(var i = 0; i < foi.length; i++){ %>
                          <option><%= foi[i]%></option>
                      <%}%>
                  </select>
                </div>
              </div>

              <div class="col-xs-4">
                <div class="form-group">
                  <label for="btn_filter_prof">Preferred Professor(s)</label>
                  <select id="btn_filter_prof" name="btn_filter_prof" class="form-control selectpicker" data-live-search="true">
                          <option selected="selected">Any</option>
                          <% for(var i = 0; i < profs.length; i++){ %>
                              <option><%= profs[i]%></option>
                          <%}%>
                      </select>
                </div>
              </div>
            </div>

          </div>
          <div class="form-group row">
            <h4>Selected Filter</h4>
            <hr>
            <p id="selectedFilter"></p>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group row">
            <button id="filter_close" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
            <button id="filter_submit" type="submit" class="btn btn-success btn-default pull-left"><span class="glyphicon glyphicon-check"></span> Submit</button>
            <div class="input-group">
              <input id="preset_name" name="preset_name" type="text" class="form-control" placeholder="Preset Name">
              <span class="input-group-btn">
                    <button id="save_preset" name="save_preset" class="btn btn-primary form-control" type="submit">Save Preset</button>
              </span>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>