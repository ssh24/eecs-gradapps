<!-- Modal Filter Section-->
<div class="modal fade" id="filterModal">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id="close-btn" type="button" class="close" data-dismiss="modal">â€”</button>
        <h2>Filter <span class="glyphicon glyphicon-pencil"></span></h2>
      </div>
      <form id="filterForm" action="/roles/committee/filter" method="post">
        <div class="modal-body">
          <div id="div_col" class="form-group row">
            <h4>Choose Your Columns</h4>
            <select id="preset" name="preset" style="display: inline-block;">
                            <option>Loaded from database...</option>
                            <option>Preset 2</option>
                            <option>Preset 3</option>
                            <option>Preset 4</option>
            </select>
            <hr>
            <div class="row">
              <div class="form-group btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button id="btn_col_date" name="btn_col_date" type="button" class="btn btn-default">Date Uploaded</button>
                </div>
                <div class="btn-group" role="group">
                  <button id="btn_col_name" name="btn_col_name" type="button" class="btn btn-default">Name</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_degree" name="btn_col_degree" type="button" class="btn btn-default">Degree Applied For</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_review" name="btn_col_review" type="button" class="btn btn-default">My Review Status</button>
                </div>
                <div class="btn-group" role="group">
                    <button id="btn_col_actions" name="btn_col_actions" type="button" class="btn btn-default">Actions</button>
                </div>
              </div>
            </div>
          </div>
          <div id="div_filt" class="form-group row">
            <h4>Choose Your Filters</h4>
            <hr>
            <div class="row">
              <div class="col-xs-4">
                <div class="form-group">
                  <label for="btn_filter_name">Name</label>
                  <select id="btn_filter_name" name="btn_filter_name" class="form-control selectpicker" data-live-search="true">
                        <option selected="selected">Any</option>
                        <% for(var i = 0; i < applicants.length; i++){ %>
                            <option><%= applicants[i]%></option>
                        <%}%>
                    </select>
                </div>
              </div>
              <div class="col-xs-4">
                  <div class="form-group">
                    <label for="btn_filter_degree">Degree Applied For</label>
                    <select id="btn_filter_degree" name="btn_filter_degree" class="form-control selectpicker" data-live-search="true">
                        <option selected="selected">Any</option>
                        <option>PhD</option>
                        <option>MSc</option>
                        <option>MASc</option>
                    </select>
                  </div>
              </div>
              <div class="col-xs-4">
                  <div class="form-group">
                    <label for="btn_filter_review">My Review Status</label>
                    <select id="btn_filter_review" name="btn_filter_review" class="form-control selectpicker" data-live-search="true">
                          <option selected="selected">Any</option>
                          <option>New</option>
                          <option>Draft</option>
                          <option>In-Progress</option>
                          <option>Reviewed</option>
                          <option>Submitted</option>      
                    </select>
                  </div>
                </div>
            </div>

          </div>
          <div class="form-group row">
            <h4>Selected Filter</h4>
            <hr>
            <p id="selectedFilter"></p>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group row">
            <button id="filter-close" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
            <button id="filter-submit" type="submit" class="btn btn-success btn-default pull-left"><span class="glyphicon glyphicon-check"></span> Submit</button>
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Preset Name">
              <span class="input-group-btn">
                    <button class="btn btn-primary form-control" type="button">Save Preset</button>
              </span>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
